<Window x:Class="StudentShop.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:StudentShop.UI"
        mc:Ignorable="d"
        Title="PXL PC-Shop" Height="800" Width="1200" FontSize="16" Icon="/csharp-logo.png">
    
        <DockPanel>
        <Menu DockPanel.Dock="Top" FontSize="16">
            <MenuItem Header="Bestand">
                <MenuItem Header="Afsluiten"/>
            </MenuItem>
            <MenuItem Header="Bestelling">
                <MenuItem Header="Nieuw"/>
                <MenuItem Header="Afdrukken"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem Header="About"/>
            </MenuItem>
        </Menu>
        <Border DockPanel.Dock="Right" Background="#FFE6E6E6" BorderBrush="Black" BorderThickness="1">
            <StackPanel x:Name="infoPanel" Margin="10" >
                <TextBlock Text="Openingsuren:" TextDecorations="Underline" FontWeight="Bold"/>
                <TextBlock Text="maandag tem vrijdag &#10;doorlopend van 8u15-16u15"/>
                <TextBlock Text="Contact:" TextDecorations="Underline" FontWeight="Bold"/>
                <TextBlock Text="011/77 58 14&#10;011/77 58 15"/>
            </StackPanel>
        </Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <StackPanel Margin="10">
                <GroupBox Header="Order" Padding="10">
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <StackPanel Grid.Column="0" Margin="5">
                            <Label Content="Klant:"/>
                            <TextBox x:Name="customerNameTextBox" Padding="4"/>
                        </StackPanel>
                        <StackPanel Grid.Column="1" Margin="5">
                            <Label Content="Datum:"/>
                            <DatePicker x:Name="orderDatePicker"/>
                        </StackPanel>
                    </Grid>
                </GroupBox>
                <GroupBox Header="OrderLines toevoegen" Padding="10">
                    <TabControl>
                        <TabItem Header="Product">
                            <StackPanel Margin="10">
                                <TextBlock>Selecteer een product en klik op toevoegen...</TextBlock>
                                <ComboBox x:Name="productLineComboBox"/>
                                <Button Content="Toevoegen" HorizontalAlignment="Right" Click="AddProductLine"/>
                            </StackPanel>
                        </TabItem>
                        <TabItem Header="Tekst">
                            <StackPanel>
                                <TextBlock>Geef een tekst in en klik op toevoegen</TextBlock>
                                <TextBox x:Name="textLineTextBox"/>
                                <Button Content="Toevoegen" HorizontalAlignment="Right" Click="AddTextLine"/>
                            </StackPanel>
                        </TabItem>
                    </TabControl>
                </GroupBox>
                <GroupBox Header="Betalen" Padding="10">
                    <StackPanel>
                        <TextBlock>Klik om één van de betaalmethodes om de bestelling te bevestigen</TextBlock>
                        <WrapPanel>
                        <Button Height="60" Margin="0,0,20,0" >
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/bancontact.png"/>
                            </Button.Background>
                            <Image Source="/Images/bancontact.png"  />
                        </Button>
                        <Button Height="60" Margin="0,0,20,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/visa.png"/>
                            </Button.Background>
                            <Image Source="/Images/visa.png"  />
                        </Button>
                        <Button Height="60" Margin="0,0,20,0">
                            <Button.Background>
                                <ImageBrush ImageSource="/Images/paypal.png"/>
                            </Button.Background>
                            <Image Source="/Images/paypal.png"  />
                        </Button>
                    </WrapPanel>
                    </StackPanel>
                </GroupBox>
            </StackPanel>

            <GroupBox Grid.Row="1" Header="Huidige bestelling:" Margin="10" Padding="10">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="4*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock FontFamily="Lucida Console" x:Name="orderSummaryTextBlock"/>
                    <Border Grid.Column="1" VerticalAlignment="Bottom" CornerRadius="30" BorderBrush="Black" BorderThickness="2">
                        <StackPanel >
                            <Label Content="Totaal:" HorizontalContentAlignment="Center"/>
                            <Label x:Name="orderAmountLabel" Content="€ 0.00" HorizontalContentAlignment="Center"/>
                        </StackPanel>
                    </Border>
                
                </Grid>

            </GroupBox>

        </Grid>
    </DockPanel>
</Window>
